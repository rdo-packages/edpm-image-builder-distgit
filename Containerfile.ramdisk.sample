ARG BASE_IMAGE=quay.io/centos/centos:stream9-minimal
FROM $BASE_IMAGE

WORKDIR /
COPY copy_out.sh .

ARG IMAGE_NAME=ironic-python-agent
ARG RAMDISK_FILE=$IMAGE_NAME.initramfs
ARG KERNEL_FILE=$IMAGE_NAME.kernel
ARG CHECKSUM_FILE=$IMAGE_NAME.sha256

COPY $RAMDISK_FILE .
COPY $KERNEL_FILE .
COPY $CHECKSUM_FILE .
ENV SRC_DIR=/
ENV DEST_DIR=/target
ENV CHECKSUM_FILE=$CHECKSUM_FILE

CMD ["/copy_out.sh"]
